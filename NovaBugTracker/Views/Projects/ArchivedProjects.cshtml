@using NovaBugTracker.Services.Interfaces
@using NovaBugTracker.Models.Enums
@using NovaBugTracker.Models

@model IEnumerable<NovaBugTracker.Models.Project>

@inject IBTFileService _fileService

@{
    ViewData["Title"] = "Archived Projects";
}


<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <div class="tab-content" id="top-tabContent">
                <div class="tab-pane fade show active" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                    <div class="row">
                        @foreach (Project project in Model)
                        {
                            <div class="col-xxl-4 col-lg-6">
                                <div class="project-box">
                                    <h6>@project.Name</h6>
                                    <p>@project.Description</p>
                                    <div class="row details">
                                        <div class="col-6"> <span>Start Date</span></div>
                                        <div class="col-6 font-primary">@project.Created</div>
                                        <div class="col-6"> <span>End Date</span></div>
                                        <div class="col-6 font-primary">@project.EndDate</div>
                                        <div class="col-6"> <span>Members</span></div>
                                        <div class="col-6 font-primary">@project.Members.Count</div>
                                    </div>
                                    <div class="customers">
                                    </div>
                                    @{
                                        var start = project.StartDate;
                                        var end = project.EndDate;
                                        var today = DateTime.Now;
                                        var percent = today >= end ? 100 : today < start ? 0 : Math.Round((today.Subtract(start)) / (end.Subtract(start)) * 100);
                                    }
                                    <div class="project-status mt-4">
                                        <div class="media mb-0">
                                            <p>@percent % </p>
                                            <div class="media-body text-end"><span>Done</span></div>
                                        </div>
                                        <div class="progress" style="height: 5px">
                                            <div class="progress-bar-animated bg-primary progress-bar-striped" role="progressbar" style="width: @percent%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-info btn-sm">Details</a>
                                    @if (User.IsInRole(nameof(BTRoles.Admin)))
                                    {
                                        <a asp-action="AssignProjectManager" asp-route-id="@project.Id" class="btn btn-outline-dark btn-sm">Assign PM</a>
                                    }
                                    <a asp-action="Archive" asp-route-id="@project.Id" class="btn btn-outline-danger btn-sm">Archive</a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



