@using NovaBugTracker.Models.Enums
@using Microsoft.AspNetCore.Identity

@model NovaBugTracker.Models.Ticket

@inject UserManager<BTUser> _usermanager

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="Archived" />
            <input type="hidden" asp-for="ArchivedByProject" />
            <input type="hidden" asp-for="ProjectId" />
            <input type="hidden" asp-for="SubmitterUserId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <p>@Model.Created</p>
            </div>
            @if (Model.Updated != null)
            {
                <div class="form-group">
                    <label asp-for="Updated" class="control-label">Last Updated</label> <br />
                    <p>@Model.Updated</p>
                </div>
            }
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId"></select>
                <span asp-validation-for="TicketTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatusId" class="control-label"></label>
                @if (User.IsInRole(nameof(BTRoles.Admin)) || User.IsInRole(nameof(BTRoles.ProjectManager)) || User.IsInRole(nameof(BTRoles.Developer)))
                {
                    <select asp-for="TicketStatusId" class="form-control" asp-items="ViewBag.TicketStatusId"></select>
                }
                else
                {
                    <input type="hidden" asp-for="TicketStatusId" />
                    <select asp-for="TicketStatusId" class="form-control" asp-items="ViewBag.TicketStatusId" disabled></select>
                }
                <span asp-validation-for="TicketStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPriorityId" class="control-label"></label>
                <select asp-for="TicketPriorityId" class="form-control" asp-items="ViewBag.TicketPriorityId"></select>
                <span asp-validation-for="TicketPriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperUserId" class="control-label"></label>
                @if (User.IsInRole(nameof(BTRoles.Admin)) || User.IsInRole(nameof(BTRoles.ProjectManager)))
                {
                    <select asp-for="DeveloperUserId" class="form-control" asp-items="ViewBag.DeveloperUserId"></select>
                }
                else
                {
                    <input type="hidden" asp-for="DeveloperUserId" />
                    <select asp-for="DeveloperUserId" class="form-control" asp-items="ViewBag.DeveloperUserId" disabled></select>
                }
                <span asp-validation-for="DeveloperUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmitterUserId" class="control-label"></label>
                <select asp-for="SubmitterUserId" class="form-control" asp-items="ViewBag.SubmitterUserId" disabled></select>
                <span asp-validation-for="SubmitterUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
