@model NovaBugTracker.Models.Project

@{
    ViewData["Title"] = "Archive";
}

<h1>Archive</h1>

<div class="container-fluid">
    <div class="row project-cards justify-content-center">
        <div class="col-md-4 project-list">
            <div class="card">
                <h5>Are you want to archive @Model.Name</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <div>
                    <form asp-action="Archive">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Archive" class="btn btn-danger" />
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
