@using NovaBugTracker.Services.Interfaces
@using NovaBugTracker.Models.Enums
@using Microsoft.AspNetCore.Identity


@model NovaBugTracker.Models.Project


@inject IBTFileService _fileService
@inject IBTProjectService _projectService
@inject IBTRolesService _roleService
@inject IBTTicketService _ticketService
@{
    ViewData["Title"] = "Details";
}



<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3>@Model.Name</h3>
                <p>@Model.Description</p>
                <div class="row details">
                    <div class="col-3"> <span>Start Date</span></div>
                    <div class="col-3 font-primary">@Model.Created</div>
                </div>
                <div class="row details">
                    <div class="col-3"> <span>End Date</span></div>
                    <div class="col-3 font-primary">@Model.EndDate</div>
                </div>
                <div class="row details">
                    <div class="col-3"> <span>Members</span></div>
                    <div class="col-3 font-primary">@Model.Members.Count</div>
                </div>
                @{
                    var start = Model.StartDate;
                    var end = Model.EndDate;
                    var today = DateTime.Now;
                    var percent = today >= end ? 100 : today < start ? 0 : Math.Round((today.Subtract(start)) / (end.Subtract(start)) * 100);
                }
                @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Edit Project</a>
                    </div>
                }
                <div class="project-status mt-4">
                    <div class="media mb-0">
                        <p>@percent % </p>
                        <div class="media-body text-end"><span>Done</span></div>
                    </div>
                    <div class="progress" style="height: 5px">
                        <div class="progress-bar-animated bg-primary progress-bar-striped" role="progressbar" style="width: @percent%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card justify-content-center">
                <img src="@_fileService.ConvertByteArrayToFile(Model.ImageFileData!, Model.ImageFileType!, 3)" style="height:400px;width:auto"/>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row project-cards">
        <div class="col-md-12 project-list">
            <div class="card">
                <div class="row">
                    <div class="col-md-6 p-0">
                        <div class="header">
                            <h2>Project Manager</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            @{
                                BTUser? projectManager = await _projectService.GetProjectManagerAsync(Model.Id);
                            }
                            @if (projectManager != null)
                            {
                                @projectManager.FullName
                            }
                            <br />
                            <div class="row justify-content-end">
                                <div class="col-4">
                                        @if (projectManager == null)
                                        {
                                            <a class="btn btn-sm btn-danger ms-2" asp-action="AssignProjectManager" asp-route-id="@Model.Id">Assign</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-outline-warning ms-2" asp-action="AssignProjectManager" asp-route-id="@Model.Id">Reassign</a>
                                        }
                                    @* if() logic for Avatar/Default etc *@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 p-0">
                         <div class="header">
                            <h2>Project Team</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            <ul class="right_chat list-unstyled mb-0">

                                @foreach (var user in Model.Members!)
                                {
                                    <li>@user.FullName</li>
                                }
                                @* Logic for avatars *@
                            </ul>
                            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                            {
                                <div class="card-footer">
                                    <div class="row action-buttons">
                                        <div class="col-12 col-md-auto ms-md-auto mt-3 mt-md-0 ms-auto">
                                            <a asp-action="AddUsersToProject" asp-controller="Projects" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm"><i data-feather="edit"></i>Manage Team</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="tab-content" id="top-tabContent">
                        <div class="tab-pane fade show active" id="top-home" role="tabpanel" aria-labelledby="top-home-tab">
                            <div class="row">
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <div class="col-xxl-4 col-lg-6">
                                        <div class="project-box">
                                            <h6>@ticket.Title</h6>
                                            <p>@ticket.Description</p>
                                            <div class="row details">
                                                <div class="col-6"> <span>Start Date</span></div>
                                                <div class="col-6 font-primary">@ticket.Created</div>
                                                <div class="col-6"> <span>Developer</span></div>
                                                @if(ticket.DeveloperUser != null)
                                                {
                                                    <div class="col-6 font-primary">@ticket.DeveloperUser.FullName</div>
                                                }
                                                else
                                                {
                                                    <div class="col-3 btn btn-outline-primary btn-sm"><a asp-controller="Tickets" asp-action="AssignTicket" asp-route-id="@ticket.Id"><i data-feather="plus-square"></i></a></div>
                                                }
                                            </div>
                                            <div class="customers">
                                            </div>
                                            <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-outline-primary btn-sm"><i data-feather="edit"></i></a>
                                            <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-outline-secondary btn-sm"><i data-feather="list"></i></a>
                                            @if (User.IsInRole(nameof(BTRoles.Admin)))
                                            {
                                                <a asp-action="AssignProjectManager" asp-route-id="@ticket.Id" class="btn btn-outline-warning btn-sm"><i data-feather="plus-square"></i></a>
                                                <a asp-action="Archive" asp-route-id="@ticket.Id" class="btn btn-outline-danger btn-sm"><i data-feather="trash-2"></i></a>
                                            }
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
