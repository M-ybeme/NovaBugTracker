@model NovaBugTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="email-wrap">
        <div class="row">
            <div class="col-xl-9 col-md-12 xl-70">
                <div class="email-right-aside">
                    <div class="card email-body">
                        <div class="email-profile">
                            <div class="email-body">
                                <div class="email-compose">
                                    <div class="email-top compose-border">
                                        <div class="compose-header">
                                            <h4 class="mb-0">New Message</h4>
                                            <button class="btn btn-primary" type="button"><i class="fa fa-file me-2"></i> save</button>
                                        </div>
                                    </div>
                                    <div class="email-wrapper">
                                        <form asp-action="Create" class="theme-form">
                                            <div class="form-group">
                                                <label asp-for="ProjectId" class="control-label"></label>
                                                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="InviteeEmail" class="control-label"></label>
                                                <input asp-for="InviteeEmail" class="form-control" />
                                                <span asp-validation-for="InviteeEmail" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="InviteeFirstName" class="control-label"></label>
                                                <input asp-for="InviteeFirstName" class="form-control" />
                                                <span asp-validation-for="InviteeFirstName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="InviteeLastName" class="control-label"></label>
                                                <input asp-for="InviteeLastName" class="form-control" />
                                                <span asp-validation-for="InviteeLastName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Message</label>
                                                <textarea asp-for="Message" class="form-control" id="text-box" name="text-box" cols="10" rows="2">                                                            </textarea>
                                            </div>
                                        </form>
                                        <div class="action-wrapper">
                                            <ul class="actions">
                                                <li><button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane me-2"></i>send</button></li>
                                                <li><a asp-action="Index" class="btn btn-secondary ">Back to List</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



